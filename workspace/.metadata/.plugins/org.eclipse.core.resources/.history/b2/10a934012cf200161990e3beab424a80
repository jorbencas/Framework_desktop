	public static String read_users_generic(Class_user u) {
		String cad = "";
		if (u instanceof Client) {
			cad = ((Client) u).to_String();
		}
		if (u instanceof Admin) {
			cad = ((Admin) u).to_String();
		}
		if (u instanceof User) {
			cad = ((User) u).to_String();
		}
		return cad;
	}

